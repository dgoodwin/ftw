<h1>Listing users</h1>

<table>
  <tr>
    <th>Login</th>
    <th>Name</th>
    <th>Location</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.login %></td>
    <td><%= user.name %></td>
    <td><%= user.location %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= if !session[:user_id].nil?
              # TODO: Only site admins should be able to do this.
              link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete 
            end 
        %></td>
  </tr>
<% end %>
</table>

